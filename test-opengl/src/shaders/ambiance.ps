#version 330 core
in vec2 o_tex_coor0;
out vec4 out_color;

struct DirectionalLight{
	vec3 color;
	float ambiant_intensity;
};

uniform sampler2D g_sampler;
uniform DirectionalLight dir_light;

void main(){
	out_color = texture2D(g_sampler, o_tex_coor0.xy) * vec4(dir_light.color, 1) * dir_light.ambiant_intensity;
}